{
  "name": "TREZOR Password Manager",
  "description": "Really secure password manager using TREZOR.",
  "version": "0.6.0",
  "author": "SatoshiLabs",
  "short_name": "TREZOR Password Manager",
  "minimum_chrome_version": "49.0.0",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+T"
      },
      "description": "Open TREZOR Password Manager app window."
    },
    "fill_login_form": {
      "suggested_key": {
        "default": "Alt+Shift+F"
      },
      "description": "Fill login form with first fitting credentials."
    },
    "restart_app": {
      "suggested_key": {
        "default": "Alt+Shift+U"
      },
      "description": "Hard restart of app."
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png",
    "512": "images/icon512.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "TREZOR Password Manager"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/upload.js",
      "js/background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://apis.google.com/ https://sisyfos.trezor.io/; object-src 'self'",
  "oauth2": {
    "client_id": "296429812941-co5alkvv0tan1ptun23ilefh96gb1heb.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/drive.install",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "web_accessible_resources": [
    "html/chrome_oauth_receiver.html",
    "images/trezor.svg",
    "images/success.svg",
    "css/content_style.css"
  ],
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "chrome://favicon/",
    "storage",
    "identity",
    "contextMenus",
    "background",
    "tabs",
    "activeTab",
    "http://*/",
    "https://*/",
    "nativeMessaging",
    "https://*.dropbox.com/*",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken"
  ]
}
